# Environment variables for SCADA Studio
# Copy to .env and fill in values

# Server
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Auth
JWT_SECRET=change-me-in-production
ADMIN_USER=admin
ADMIN_PASSWORD=scada-studio

# Gitea / Git Server
GITEA_URL=http://localhost:3000
GITEA_TOKEN=
GITEA_USERNAME=scada

# Railway service connections (auto-populated on Railway)
N8N_WEBHOOK_URL=https://n8n-g8qm-production.up.railway.app
CIMGRAPH_API_URL=http://cimgraph-api.railway.internal
BLAZEGRAPH_URL=http://blazegraph.railway.internal:8080/bigdata

# Database (optional, for persistent storage)
# DATABASE_URL=postgresql://scada:password@localhost:5432/scada_studio

# File storage
UPLOAD_DIR=/tmp/scada-studio-uploads
REPOS_DIR=/tmp/scada-studio-repos
