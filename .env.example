# Environment variables for SCADA Studio
# Copy to .env and fill in values

# ─── Database (PostgreSQL + pgvector) ────────────────────────────────────
POSTGRES_USER=scada
POSTGRES_PASSWORD=change-me-in-production
POSTGRES_DB=scada_studio
POSTGRES_PORT=5432

# ─── Gitea ───────────────────────────────────────────────────────────────
GITEA_VERSION=1.22
GITEA_DB=gitea
GITEA_ROOT_URL=http://localhost:3000
GITEA_DOMAIN=localhost
GITEA_HTTP_PORT=3000
GITEA_SSH_PORT=2222
GITEA_TOKEN=

# ─── Sidecar ─────────────────────────────────────────────────────────────
SIDECAR_PORT=8000
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ─── External Verance services (Railway) ─────────────────────────────────
N8N_WEBHOOK_URL=https://n8n-g8qm-production.up.railway.app
CIMGRAPH_API_URL=http://cimgraph-api.railway.internal
BLAZEGRAPH_URL=http://blazegraph.railway.internal:8080/bigdata
